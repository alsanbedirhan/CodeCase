<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bedirhan ALŞAN - CodeCase</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Work/Index">CodeCase</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="bg-light text-center text-muted py-3 mt-5">
        <div class="container">
            <small>&copy; <a href="https://www.bedirhanalsan.com" target="_blank">Admin</a></small>
        </div>
    </footer>
     @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const typeSelect = document.getElementById("typeSelect");
            if (!typeSelect) return; 

            function updateValueInput() {
                let valueInput = document.getElementById("valueInput");
                const selected = typeSelect.value;
                const currentValue = valueInput ? valueInput.value : "";

                let newInputHtml = "";

                if (selected === "bool") {
                    newInputHtml = `
                        <input type="hidden" name="Value" value="false" />
                        <input type="checkbox" id="valueInput" name="Value" class="form-check-input" value="true" ${(currentValue === "true") ? "checked" : ""} />
                    `;
                }
                else if (selected === "int" || selected === "double") {
                    newInputHtml = `<input id="valueInput" name="Value" class="form-control" type="number" value="${currentValue}" />`;
                }
                else if (selected === "date") {
                    newInputHtml = `<input id="valueInput" name="Value" class="form-control" type="date" value="${currentValue}" />`;
                }
                else {
                    newInputHtml = `<input id="valueInput" name="Value" class="form-control" type="text" value="${currentValue}" />`;
                }

                valueInput.outerHTML = newInputHtml;
            }

            typeSelect.addEventListener("change", updateValueInput);
        });
    </script>

</body>
</html>