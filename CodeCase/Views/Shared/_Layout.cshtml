     @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const typeSelect = document.getElementById("typeSelect");
            if (!typeSelect) return;

            function updateValueInput() {
                const valueContainer = document.getElementById("valueContainer");
                const oldInput = document.getElementById("valueInput");
                const selected = typeSelect.value;
                const currentValue = oldInput ? oldInput.value : "";

                let newInputHtml = "";

                switch (selected) {
                    case "bool":
                        newInputHtml = `
                            <div class="form-check">
                                <input type="checkbox" id="valueInput" class="form-check-input" ${(currentValue.toLowerCase() === "true") ? "checked" : ""} />
                                <input type="hidden" id="hiddenValue" name="Value" value="${currentValue.toLowerCase() === "true" ? "true" : "false"}" />
                            </div>`;
                        break;

                    case "int":
                        newInputHtml = `<input id="valueInput" name="Value" class="form-control" type="number" step="1" value="${currentValue}" />`;
                        break;

                    case "double":
                        newInputHtml = `<input id="valueInput" name="Value" class="form-control" type="number" step="any" value="${currentValue}" />`;
                        break;

                    case "date":
                        newInputHtml = `<input id="valueInput" name="Value" class="form-control" type="date" value="${currentValue}" />`;
                        break;

                    default:
                        newInputHtml = `<input id="valueInput" name="Value" class="form-control" type="text" value="${currentValue}" />`;
                        break;
                }

                oldInput.outerHTML = newInputHtml;

                attachCheckboxListener();
            }

            function attachCheckboxListener() {
                const checkbox = document.getElementById("valueInput");
                if (!checkbox || checkbox.type !== "checkbox") return;

                checkbox.addEventListener("change", function () {
                    const hidden = document.getElementById("hiddenValue");
                    if (hidden)
                        hidden.value = checkbox.checked ? "true" : "false";
                });
            }

            updateValueInput();

            typeSelect.addEventListener("change", updateValueInput);
        });
    </script>


</body>
</html>